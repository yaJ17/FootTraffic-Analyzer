{
  "workflows": [
    {
      "name": "Start application",
      "tasks": [
        {
          "type": "packager.installForAll"
        },
        {
          "type": "shell.exec",
          "command": "NODE_ENV=development tsx server/index.ts",
          "waitForPort": 5000
        }
      ]
    },
    {
      "name": "Flask Backend",
      "tasks": [
        {
          "type": "packager.installForAll"
        },
        {
          "type": "shell.exec",
          "command": "bash ./start_flask_workflow.sh",
          "waitForPort": 5003
        }
      ]
    },
    {
      "name": "Project",
      "mode": "parallel",
      "tasks": [
        {
          "type": "workflow.run",
          "workflow": "Start application"
        },
        {
          "type": "workflow.run",
          "workflow": "Flask Backend"
        }
      ]
    },
    {
      "name": "Web Application",
      "tasks": [
        {
          "type": "packager.installForAll"
        },
        {
          "type": "shell.exec", 
          "command": "bash ./start_all.sh",
          "waitForPort": 5000
        }
      ]
    }
  ]
}